{
  "name": "yt-link-v2",
  "version": "0.0.1",
  "description": "YT Link V2 allows you to download YouTube videos as MP3s, or entire playlists as a ZIP file.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "next dev",
    "build": "next build && next export",
    "lint": "next lint",
    "package": "electron-builder"
  },
  "keywords": [],
  "author": "Steven Ou",
  "license": "ISC",
  "dependencies": {
    "next": "14.2.5",
    "node-fetch": "^2.7.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.steven-ou.yt-link-v2",
    "productName": "YT Link V2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
