{
  "name": "yt-link",
  "version": "0.1.0",
  "private": true,
  "description": "YT Link allows you to download YouTube videos as MP3s, or entire playlists as a ZIP file.",
  "main": "main.js",
  "scripts": {
    "postinstall": "npm install --prefix frontend",
    "start": "electron .",
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "npm run dev --prefix frontend",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build --prefix frontend",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "nextjs"
  ],
  "author": "Steven Ou",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.steven-ou.yt-link",
    "productName": "YT Link",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/.next/**/*"
    ],
    "win": {
      "target": "zip"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
