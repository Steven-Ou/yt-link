{
  "name": "yt-link",
  "version": "1.0.0",
  "description": "An application to download YouTube videos as MP3s, either individually or as a whole playlist.",
  "main": "frontend/main.js",
  "scripts": {
    "start": "electron .",
    "build:python": "pyinstaller service/app.py --name yt-link-backend --onefile --distpath service/dist --workpath service/build --noconfirm",
    "start:frontend": "npm run dev --prefix frontend",
    "build": "npm run build:python && npm run build:frontend && npm run dist",
    "build:backend": "npm install --prefix backend",
    "build:frontend": "npm install --prefix frontend && npm run build --prefix frontend",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Steven Ou",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.steven.ytlink",
    "productName": "YT Link",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/out/**/*",
      "frontend/main.js",
      "frontend/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "service/dist/yt-link-backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "zip"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.19.2",
    "node-ipc": "^11.1.0"
  }
}
