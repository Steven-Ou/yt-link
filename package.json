{
  "name": "yt-link",
  "version": "0.1.0",
  "description": "An Electron app for downloading YouTube videos and playlists.",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:frontend && electron .",
    "build:frontend": "npm run build --prefix frontend",
    "dist": "npm run build:frontend && electron-builder",
    "postinstall": "npm install --prefix frontend"
  },
  "keywords": [],
  "author": "Steven Ou",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "portfinder": "^1.0.32"
  },
  "build": {
    "appId": "com.steven-ou.yt-link",
    "productName": "YT Link",
    "publish": {
      "provider": "github"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "service/dist/",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
