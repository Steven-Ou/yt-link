{
  "name": "yt-link",
  "version": "0.1.0",
  "description": "Desktop app to download youtube videos and playlist as mp3 files",
  "author": "Steven Ou",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "cd frontend && npx next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npx next build",
    "build:backend": "cd service && python -m PyInstaller app.py --noconfirm --onefile --name yt-link-backend --distpath ./dist",
    "dist": "npm run build && electron-builder --publish never"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.stevenou.yt-link",
    "productName": "YT Link",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/out/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "frontend/public/icon.icns"
    },
    "win": {
      "target": "zip",
      "icon": "frontend/public/icon.ico"
    },
    "extraResources": [
      {
        "from": "service/dist",
        "to": "backend"
      },
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "afterPack": "./scripts/afterPack.js"
  }
}
