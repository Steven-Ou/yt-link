{
  "name": "yt-link",
  "version": "0.1.0",
  "description": "Cross-platform application to download and manage your favorite videos.",
  "main": "frontend/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "start:frontend": "npm run dev --prefix frontend",
    "build": "npm run build:frontend && npm run dist",
    "build:backend": "npm install --prefix backend",
    "build:frontend": "npm install --prefix frontend && npm run build --prefix frontend",
    "dist": "electron-builder"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron"
  ],
  "author": "Steven Ou",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.steven.ytlink",
    "productName": "YT Link",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/out/**/*",
      "frontend/main.js",
      "frontend/preload.js",
      "service/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "service/**/*"
    ],
    "win": {
      "target": "zip"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
